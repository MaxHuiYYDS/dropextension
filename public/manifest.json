{
  "manifest_version": 2,
  "name": "Maxextension",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "http://*/",
    "https://*/",
    "https://maxhui2021.myshopify.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "run_at": "document_idle",
    "js": [
      "contentScript.js"
    ],
    "css": ["custom.css"]

  }],
  "web_accessible_resources": [
    "inject.js"
  ]
}